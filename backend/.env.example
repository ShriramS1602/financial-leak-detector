# Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Gmail OAuth (Get from Google Cloud Console)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback

# ===========================================
# LLM API Keys
# ===========================================
LLM_API_KEY=your-gemini-api-key
GROQ_API_KEY=your-groq-api-key

# ===========================================
# Database
# ===========================================
DATABASE_URL=sqlite:///./finance_tracker.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# ===========================================
# Security
# ===========================================
# Generate a secure secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# RSA Keys for Password Encryption
# ===========================================
# Generate new keys using:
#   openssl genrsa -out private_key.pem 2048
#   openssl rsa -in private_key.pem -pubout -out public_key.pem
# Then convert to single-line format with \n escape sequences
RSA_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT_HERE\n-----END RSA PRIVATE KEY-----"
RSA_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_CONTENT_HERE\n-----END PUBLIC KEY-----"

# ===========================================
# Environment Settings
# ===========================================
ENVIRONMENT=development
DEBUG=true

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# Email Sync Settings
# ===========================================
EMAIL_SYNC_BATCH_SIZE=50
EMAIL_SYNC_DAYS=30

# ===========================================
# Frontend CORS
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# SMTP Email Settings (for sending emails)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
